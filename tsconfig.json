{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules",
    "vendor"
  ]
}

